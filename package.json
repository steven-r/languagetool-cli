{
  "name": "languagetool-cli",
  "version": "1.0.0",
  "description": "Command line tool to check for spelling errors in documents",
  "main": "dist/language-tool.js",
  "bin": {
    "language-tool": "dist/language-tool.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "semantic-release": "semantic-release",
    "prepare": "is-ci || husky install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest"
  },
  "repository": "git+https://github.com/steven-r/mybook.git",
  "author": "Stephen Reindl <stephen.reindl@outlook.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steven-r/mybook/issues"
  },
  "homepage": "https://github.com/steven-r/mybook#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^18.11.15",
    "@types/node-fetch": "^2.6.2",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "prettier": "^2.8.0",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "vitest": "^0.25.3"
  },
  "dependencies": {
    "annotatedtext": "1.1.2",
    "axios": "^1.2.0",
    "commander": "^9.4.1",
    "concurrent-queue": "^7.0.2",
    "find-up": "^6.3.0",
    "mdast-util-directive": "^2.2.2",
    "micromark-extension-directive": "^2.1.2",
    "qs": "^6.11.0",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "typescript": "^4.9.4",
    "vfile": "^5.3.6",
    "vfile-location": "^4.0.1",
    "vfile-reporter": "^7.0.4",
    "winston": "^3.8.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
