{
  "name": "languagetool-cli",
  "version": "1.0.3",
  "description": "Command line tool to check for spelling errors in documents",
  "main": "dist/language-tool.js",
  "bin": {
    "language-tool": "dist/language-tool.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "semantic-release": "semantic-release",
    "prepare": "is-ci || husky install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest"
  },
  "repository": "git+https://github.com/steven-r/mybook.git",
  "author": "Stephen Reindl <stephen.reindl@outlook.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steven-r/mybook/issues"
  },
  "homepage": "https://github.com/steven-r/mybook#readme",
  "devDependencies": {
    "@commitlint/cli": "18.4.1",
    "@commitlint/config-conventional": "17.7.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "11.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "10.0.5",
    "@semantic-release/release-notes-generator": "12.0.0",
    "@types/node": "20.5.9",
    "@types/node-fetch": "2.6.2",
    "@types/qs": "6.9.10",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.62.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.55.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "prettier": "3.0.3",
    "semantic-release": "22.0.7",
    "ts-node": "10.9.1",
    "vite": "4.1.5",
    "vitest": "0.34.6"
  },
  "dependencies": {
    "annotatedtext": "1.2.0",
    "axios": "1.6.0",
    "commander": "10.0.0",
    "concurrent-queue": "7.0.2",
    "find-up": "6.3.0",
    "mdast-util-directive": "3.0.0",
    "micromark-extension-directive": "3.0.0",
    "qs": "6.11.2",
    "remark-directive": "3.0.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "typescript": "5.0.2",
    "vfile": "6.0.1",
    "vfile-location": "5.0.2",
    "vfile-reporter": "8.1.0",
    "winston": "3.11.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
