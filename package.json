{
  "name": "languagetool-cli",
  "version": "1.0.11",
  "description": "Command line tool to check for spelling errors in documents",
  "main": "dist/language-tool.js",
  "bin": {
    "language-tool": "dist/language-tool.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "semantic-release": "semantic-release",
    "prepare": "husky",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "repository": "git+https://github.com/steven-r/mybook.git",
  "author": "Stephen Reindl <stephen.reindl@outlook.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steven-r/mybook/issues"
  },
  "homepage": "https://github.com/steven-r/mybook#readme",
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/node": "20.16.1",
    "@types/node-fetch": "2.6.11",
    "@types/qs": "6.9.15",
    "@typescript-eslint/eslint-plugin": "8.2.0",
    "@typescript-eslint/parser": "8.2.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.9.0",
    "husky": "9.1.5",
    "is-ci": "3.0.1",
    "lint-staged": "^15.2.9",
    "prettier": "3.3.3",
    "semantic-release": "24.1.0",
    "ts-node": "10.9.2",
    "vite": "5.4.2",
    "vitest": "2.0.5"
  },
  "dependencies": {
    "annotatedtext": "1.2.1",
    "axios": "1.7.5",
    "commander": "12.1.0",
    "concurrent-queue": "7.0.2",
    "find-up": "7.0.0",
    "mdast-util-directive": "3.0.0",
    "micromark-extension-directive": "3.0.1",
    "qs": "6.13.0",
    "remark-directive": "3.0.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "typescript": "5.5.4",
    "vfile": "6.0.2",
    "vfile-location": "5.0.3",
    "vfile-reporter": "8.1.1",
    "winston": "3.14.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{html,json,css,scss,md,mdx}": [
      "prettier -w"
    ]
  }
}
